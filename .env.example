# Backend
SECRET_KEY=please-change-in-prod
# Comma-separated origins for CORS (dev default allows Vite dev server)
CORS_ORIGINS=http://localhost:5173

# Dev DB (sqlite) inside backend container workdir
DATABASE_URL=sqlite:///./data.db

# Frontend (dev): Vite reads VITE_* at runtime
VITE_API_BASE=http://localhost:8000/api

# Production DB (Postgres)
POSTGRES_DB=sidebyside
POSTGRES_USER=app
POSTGRES_PASSWORD=app

# LLM provider (for 图片建库)
# Currently supports Qwen/DashScope via llm_api_loader
LLM_PROVIDER=qwen
DASHSCOPE_API_KEY=your_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/api/v1
MODEL_NAME=qwen3-vl-plus
ENABLE_THINKING=true
THINKING_BUDGET=50

# ---- LLM Judge (中文答案语义判定) ----
# 是否启用英→中作答的语义判定回退（规则判错后再请 LLM 复核）
# Enable semantic fallback for English→Chinese grading (uses LLM when rule-based check fails)
# USE_LLM_JUDGE_EN2ZH=1

# 语义判定严格度：low | medium | high（默认 medium）
# Strictness for semantic judge: low | medium | high (default: medium)
# LLM_JUDGE_STRICTNESS=medium

# 将“partial（部分正确）”视为正确（开启后，partial 也计为正确）
# Treat "partial" verdict as correct when enabled
# LLM_JUDGE_TREAT_PARTIAL_AS_CORRECT=1

# ---- Logging / Tracing (可选) ----
# 代理日志级别（DEBUG/INFO/WARN/ERROR）；也可用 LLM_DEBUG=1 开启更详细调试
# Agent logger level (DEBUG/INFO/WARN/ERROR). LLM_DEBUG=1 enables extra debug.
# AGENT_LOG_LEVEL=DEBUG
# LLM_DEBUG=1

# LangSmith 追踪（可选，需安装 langsmith）
# Optional LangSmith tracing (requires langsmith)
# LANGSMITH_ENABLED=1
# LANGCHAIN_TRACING_V2=1
# LANGCHAIN_API_KEY=your_langsmith_key
# LANGCHAIN_PROJECT=SideBySide-Definition-Judge-Agent
