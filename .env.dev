# ===========================================
# Development Environment Configuration
# ===========================================
# Usage: docker compose --env-file .env.dev up
# Or: ln -sf .env.dev .env && docker compose up

# ---- Application ----
SECRET_KEY=dev-secret-key-do-not-use-in-production
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ---- Frontend (Vite) ----
VITE_API_BASE=http://localhost:8000/api

# ---- Database (SQLite for development) ----
DATABASE_URL=sqlite:////app/data/data.db

# ---- Logging Configuration (Unified Logging System) ----
# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=DEBUG

# Log format: text (colored, human-readable) | json (machine-readable)
LOG_FORMAT=text

# Log file path (optional, leave empty for console only)
LOG_FILE_PATH=

# Log rotation size in bytes (default: 10MB)
LOG_ROTATION_SIZE=10485760

# Log rotation backup count (default: 5)
LOG_ROTATION_COUNT=5

# ---- LLM Provider (DashScope/Qwen) ----
LLM_PROVIDER=qwen
DASHSCOPE_API_KEY=your_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/api/v1
MODEL_NAME=qwen3-vl-plus
VISION_MODEL=qwen3-vl-plus
TEXT_MODEL=qwen3-max-preview

# LLM Parameters
ENABLE_THINKING=true
THINKING_BUDGET=50
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_MAX_TOKENS=2000

# ---- LLM Judge (Semantic Definition Grading) ----
# Enable semantic fallback for Englishâ†’Chinese grading
USE_LLM_JUDGE_EN2ZH=1

# Strictness: low | medium | high (default: medium)
LLM_JUDGE_STRICTNESS=medium

# Treat "partial" verdict as correct
LLM_JUDGE_TREAT_PARTIAL_AS_CORRECT=1

# ---- Legacy Logging (Backward Compatibility) ----
# Agent log level (will be overridden by LOG_LEVEL)
AGENT_LOG_LEVEL=DEBUG

# Enable LLM debug mode (detailed LLM logging)
LLM_DEBUG=1

# ---- LangSmith Tracing (Optional) ----
# Uncomment to enable LangSmith tracing
# LANGSMITH_ENABLED=1
# LANGCHAIN_TRACING_V2=1
# LANGCHAIN_API_KEY=your_langsmith_key
# LANGCHAIN_PROJECT=SideBySide-Dev

# ---- PostgreSQL (Not used in dev, but kept for reference) ----
POSTGRES_DB=sidebyside_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password
